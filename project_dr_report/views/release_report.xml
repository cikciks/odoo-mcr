<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="release_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h4>Production: <span t-field="o.name"/> </h4>
                        <div class="row mt8 mb8">
                            <div class="col-xs-6">
                                <table>
                                    <tr>
                                        <td><strong>Product</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Batch Code</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Weight / Pack</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Weight / Box</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Quantity</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-6">
                                 <table>
                                    <tr>
                                        <td><strong>Production Date</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Best Before Date</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Release Deadline</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Release Date</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status</strong></td>
                                        <td>&#160; : &#160;</td>
                                        <td>&#160;</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>



    <report
            id="report_project_task_release"
            model="project.task"
            name="project_dr_report.release_report"
            string="Print Release Form"
            report_type="qweb-pdf"
            multi="False"/>
</odoo>
